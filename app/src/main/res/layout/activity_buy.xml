<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mc"
    tools:context=".BUY">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="157dp"
        android:layout_height="0dp"
        android:layout_marginStart="220dp"
        android:layout_marginTop="168dp"
        android:layout_marginEnd="150dp"
        android:requiresFadingEdge="none"
        android:text="BUY"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#F7F4F4"
        android:textSize="50sp"
        android:textStyle="bold"
        app:fontFamily="sans-serif-condensed-medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.614"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buy_books"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="233dp"
        android:layout_height="66dp"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="360dp"
        android:background="#F1EEEE"
        android:text="books, notes and Question papers"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/buy_others"
        android:layout_width="233dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="58dp"
        android:layout_marginBottom="240dp"
        android:background="#F1EEEE"
        android:text="OTHER ESSENTIALS"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buy_books" />

</androidx.constraintlayout.widget.ConstraintLayout>